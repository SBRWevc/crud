@{
    ViewData["Title"] = "Авторизация";
}

<style>
    h1 {
        margin-left: 20px;
        margin-right: 20px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    label {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .custom-div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .custom-btn {
        border: 1px solid lightgray;
        transition: box-shadow 0.3s ease, background 0.3s ease, color 0.3s ease, border 0.3s ease;
        padding-top: 3px;
        padding-left: 5px;
        padding-right: 5px;
        padding-bottom: 5px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

        .custom-btn:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            background: coral;
            color: white;
            border: 1px solid coral;
        }

    .custom-card-header {
        background: coral;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card custom-div">
        <div class="card-header custom-card-header text-light">
            <h1 class="display-4 text-center ">Welcome</h1>
        </div>
        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="username" class="mb-1">Логин или e-Mail:</label>
                    <input type="text" class="form-control" id="username" name="username" pattern="[a-zA-Z0-9._-@@]+" required>
                </div>
                <div class="form-group mb-2 mt-2">
                    <label for="password" class="mb-1">Пароль:</label>
                    <input type="password" class="form-control" id="password" name="password" pattern="[a-zA-Z0-9._-]+" required>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn rounded-3 custom-btn">Войти</button>
                </div>
            </form>
        </div>
    </div>
</div>